import org.apache.hadoop.conf.Configuration;
import org.apache.hadoop.fs.FileStatus;
import org.apache.hadoop.fs.FileSystem;
import org.apache.hadoop.fs.Path;

import java.io.IOException;

public class HadoopGlobExample {
    public static void main(String[] args) throws IOException {
        Configuration conf = new Configuration();
        FileSystem fs = FileSystem.get(conf);

        // Path with a wildcard
        Path pathPattern = new Path("/path/to/data/dir2023-01*");

        // Get all matching directories
        FileStatus[] statuses = fs.globStatus(pathPattern);

        if (statuses != null) {
            for (FileStatus status : statuses) {
                System.out.println("Found directory: " + status.getPath());
            }
        } else {
            System.out.println("No matching directories found.");
        }

        fs.close();
    }
}