import java.util.regex.Pattern;

public class UsageExtractor {
    public static String extract(String pic) {
        String result = pic;
        // Use possessive quantifier (.*+) to avoid catastrophic backtracking.
        String regex = "^.USAGE.*+";
        if (Pattern.matches(regex, pic)) {
            int spaceIndex = pic.indexOf(' ');
            if (spaceIndex != -1) {
                result = pic.substring(0, spaceIndex);
            }
        }
        return result;
    }
    
    public static void main(String[] args) {
        String test1 = "AUSAGE some extra text";
        String test2 = "BUSAGEanotherTextWithoutSpace";
        System.out.println(extract(test1)); // prints "AUSAGE"
        System.out.println(extract(test2)); // prints the whole string
    }
}