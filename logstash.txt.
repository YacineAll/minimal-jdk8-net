
```yaml
filebeat.inputs:
- type: log
  enabled: true
  paths:
    - /path/to/your/json/file.json
  
  # Crucial for parsing multiple JSON documents per line
  multiline:
    pattern: '^\{'  # Starts with { to identify new JSON document
    negate: true
    match: after

  # JSON specific configurations
  json:
    keys_under_root: true  # Bring JSON keys to root level
    overwrite_keys: true   # Overwrite existing fields
    add_error_key: true    # Add '_error' field for parsing issues

# Elasticsearch output configuration
output.elasticsearch:
  hosts: ["localhost:9200"]
  
  # Optional index template and pattern
  index: "your-json-logs-%{+yyyy.MM.dd}"
  
  # Authentication (if required)
  # username: "elastic"
  # password: "your_password"

# Optional processor for additional transformations
processors:
  - drop_fields:
      fields: ["beat", "input", "prospector"]
  
  - convert:
      fields:
        - {from: "timestamp", to: "date", type: "time"}
  
  - add_host_metadata: ~
```