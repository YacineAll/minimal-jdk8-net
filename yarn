<configuration>
    <!-- Define your appenders -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/app-log.json</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <!-- Include the standard Logback fields like timestamp, level, logger, etc. -->
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <pattern>yyyy-MM-dd HH:mm:ss.SSS</pattern>
                </timestamp>

                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>

                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>

                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>

                <message>
                    <fieldName>message</fieldName>
                </message>

                <!-- Include all MDC fields (like userId) in the log output -->
                <mdc>
                    <fieldName>mdc</fieldName>
                </mdc>

                <!-- Optionally include the exception information if any -->
                <stackTrace>
                    <fieldName>stacktrace</fieldName>
                </stackTrace>
            </providers>
        </encoder>
    </appender>

    <!-- Configure your log levels -->
    <root level="info">
        <appender-ref ref="JSON_FILE" />
    </root>
</configuration>